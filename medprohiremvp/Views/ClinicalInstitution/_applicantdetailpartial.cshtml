        <div class="form-group">
            <label for="Availability" class="control-label ">
                @(Html.DisplayNameFor(m => m.Availability)):
            </label>
            <div class="form-group-sm">
                <label class="main-label">@Model.Availability </label>
            </div>
        </div>*@
    </div>
