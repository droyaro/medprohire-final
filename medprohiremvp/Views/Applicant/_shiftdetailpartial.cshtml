@model medprohiremvp.Models.Applicant.AppliedShifts
<form>
    <div class=" text-left">
        <div class="d-inline-block">
            <h6 class="shiftheader">Client Info</h6>
        </div>
    </div>
    <div class="text-left">
        <div class="form-group-sm">
            <label for="InstitutionName" class="control-label ">

                @Html.DisplayNameFor(m => m.InstitutionName):
            </label>
            <div class="form-group-sm">
                <label class="main-label">@Model.InstitutionName </label>
            </div>
        </div>

        <div class="form-group-sm">
            <label for="Branch_ID" class="control-label ">

                @Html.DisplayNameFor(m => m.BranchName):
            </label>
            <div class="form-group-sm">
                <label class="main-label">@Model.BranchName </label>
            </div>
        </div>
        <div class="form-group-sm">
            <label for="Location" class="control-label">

                @Html.DisplayNameFor(m => m.Location):
            </label>
            <div class="form-group-sm">
                <label class="main-label">  @Model.Location</label>
            </div>

        </div>
        <div class="form-group-sm">
            <label for="ContactPerson" class="control-label">
                @Html.DisplayNameFor(m => m.ContactPerson):
            </label>
            <div class="form-group-sm">
                <label class="main-label">  @Model.ContactPerson</label>
            </div>

        </div>
        <div class="form-group-sm">
            <label for="PhoneNumber" class="control-label">

                @Html.DisplayNameFor(m => m.PhoneNumber):
            </label>
            <div class="form-group-sm">
                <label class="main-label">  @Model.PhoneNumber</label>
            </div>

        </div>
    </div>
    <hr />

    <div class=" text-left">
        <div class="d-inline-block">
            <h6 class="shiftheader">Shift Detail</h6>
        </div>
    </div>


    <div class=" text-left">
        <div class="form-group-sm">
            <label for="Date" class="control-label">
                @Html.DisplayNameFor(m => m.ShiftsDates):
            </label>
            <div class="form-group-sm">
                <label class="main-label"><a href="#" id="seeshiftdates" data-id="@Model.ClientShift_ID">  @Model.StartDate.ToString("MMMM dd")- @Model.EndDate.ToString("MMMM dd")</a></label>
            </div>
        </div>
        <div class="form-group-sm">
            <label for="ClockInTime" class="control-label">
                @Html.DisplayNameFor(m => m.ClockInTime):
            </label>
            <div class="form-group-sm">
                <label class="main-label">  @Model.ClockInTime.ToShortTimeString()-@Model.ClockOutTime.ToShortTimeString()</label>
            </div>
        </div>

        <div class="form-group-sm">
            <label for="Occurrences" class="control-label">
                @Html.DisplayNameFor(m => m.Occurrences):
            </label>
            <div class="form-group-sm">
                <label class="main-label">@Model.Occurrences</label>
            </div>
        </div>

    </div>

    <div class="d-flex justify-content-between bd-highlight  flex-column flex-fill">
        <div class="p-2">
            <div class="form-group-sm">
                <label for="Pickdays" class="control-label">
                   Pick The Shift:
                </label>

                <div class="form-group-sm">
                    <div class="Pickdays">
                        <input type="hidden" value="@Model.ShiftsDates" asp-for="ShiftsDates"/>
                        <input type="hidden" asp-for="AppliedAllDays" value="true" />
                        <input type="hidden" asp-for="StartDate" />
                        <input type="hidden" asp-for="EndDate" />
                        <div class="datepickershift" id="calendarview" data-date-start-date=@Model.StartDate data-date-end-date=@Model.EndDate data-date-multidate="true" data-date-format="mm/dd/yyyy"></div>
                        <div class="input-group date " data-date-start-date=@Model.StartDate data-date-end-date=@Model.EndDate data-date-multidate="true">
                            <input type="text" hidden id="AppliedDaysList" name="AppliedDaysList" autocomplete="off" class=" form-control" value="@Model.ShiftsDates"/>
                            <div class="input-group-addon">
                                <span id="calendar"><i class="mdi mdi-calendar-blank mdi-24px"></i><strong> Pick Specific Days from Shift</strong></span>

                            </div>
                        </div>
                        <span id="pickeddays"></span>
                    </div>
                </div>

            </div>
        </div>
        <div class="p-2 flex-grow-1  paddingp2">
            </div>
            <div class="p-2 mt-auto flex-grow-1">
                <div class="form-group-sm">

                    <button asp-action="ApplytoShift" asp-controller="Applicant" asp-route-id="@Model.ClientShift_ID" type="submit" class="btn btn-main btn-full">Pick</button>
                </div>
            </div>
        </div>


</form>