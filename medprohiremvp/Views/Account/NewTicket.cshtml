@model medprohiremvp.Models.Account.TicketViewModel
@{
    ViewData["Title"] = "Add Ticket";
}
@section cssplugins{

    <link href="~/node_modules/summernote/dist/summernote.css" rel="stylesheet" />
    <link href="~/node_modules/summernote/dist/summernote-bs4.css" rel="stylesheet" />
}
<div class="new-heading new-heading-background ">
    <h2 class="">@ViewData["Title"]</h2>
</div>


<form asp-action="NewTicket">
    <div class="containersize ">
        <div class="form-group text-left">
            <a class="btn btn-info animation" asp-controller="Account" asp-action="Support"><i class="fa fa-angle-left"></i> BACK</a>
        </div>
        <div class="background">
            <div asp-validation-summary="ModelOnly" class="text-danger text-left"></div>
            <div class="form-group text-left">
                <div class="row">

                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="TicketCategory_ID" class="control-label "></label>
                            <div class="form-group">
                                <select id="TicketCategory_ID" name="TicketCategory_ID" asp-for="TicketCategory_ID" asp-items="@ViewBag.TicketCategories" class="form-control selectpicker flat fullwidth registerselect" title="Select Category"></select>
                            </div>
                                <span asp-validation-for="TicketCategory_ID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Subject" class="control-label "></label>
                                <input asp-for="Subject" class="form-control flat animation" type="text" />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Answer" class="control-label "></label>
                                <textarea asp-for="Answer" class="summernote"></textarea>

                            </div>

                        </div>


                </div>

            </div>

        </div>
        <div class="form-group text-center containersize">
            <button type="submit" class="btn btn-main animation">Submit</button>
        </div>
    </div>
</form>

@section jsplugins{
    <script src="~/node_modules/summernote/dist/summernote.min.js"></script>
    <script src="~/node_modules/summernote/dist/summernote-bs4.min.js"></script>
}
@section scripts{
    <script src="~/js/home/NewTicket.js"></script>
}

