@{
    ViewData["Title"] = "Reset password confirmation";
}
<form>
    <div class=" container text-center">

        <div class="heading-1">
            <div class="d-inline-block">
                <hr class="before" />
                <h2>@ViewData["Title"]</h2>
                <hr class="after" />
            </div>
        </div>
        <div class="col-lg-7 col-sm-9 col-xs-12  text-center mx-auto">
            <p>Your password has been reset. Please click here to <a asp-action="Login" asp-controller="Home">Sign in</a>.</p>
        </div>
    </div>
</form>

