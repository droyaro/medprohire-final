@model medprohiremvp.Models.Home.ApplicantModel


<form asp-action="ApplicantRegister" id="ApplicantRegister" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div class="containerbackground">
        <div class=" container  text-center">

            <div class="heading-1">
                <div class="d-inline-block">
                    <hr class="before" />
