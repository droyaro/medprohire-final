                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label asp-for="VisaStatus_ID" class="control-label "></label>
                                    <div class="form-group-sm">
                                        <select class="form-control selectpicker registerselect flat" title=" " asp-items="@ViewBag.VisaStatus" asp-for="VisaStatus_ID"></select>
                                    </div>
                                    <span asp-validation-for="VisaStatus_ID" class="text-danger"></span>
                                </div>

