                                                        <input class="form-control flat animation" asp-for="workHistories[i].PlaceName" data-val-required="The Employer field is required.">
                                                        <span asp-validation-for="workHistories[i].PlaceName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label asp-for="workHistories[i].JobTitle" class="control-label ">Job Title</label>
                                                            <input class="form-control flat animation" asp-for="workHistories[i].JobTitle" data-val-required="The Job Title field is required.">
                                                        <span asp-validation-for="workHistories[i].JobTitle" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                        </td>
                                        <td>  <div class="align-middle"><a id="trash" class=" btn btn-info"><i class="fa fa-trash"></i></a></div></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>
                                        <div class="row text-left">
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <label asp-for="workHistories[0].PlaceName" class="control-label ">Employer</label>
                                                    <input class="form-control flat animation" asp-for="workHistories[0].PlaceName" data-val-required="The Employer field is required.">
                                                    <span asp-validation-for="workHistories[0].PlaceName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <label asp-for="workHistories[0].JobTitle" class="control-label ">Job Title</label>
                                                    <input class="form-control flat animation" asp-for="workHistories[0].JobTitle" data-val-required="The Job Title field is required.">
                                                    <span asp-validation-for="workHistories[0].JobTitle" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <label asp-for="workHistories[0].StartDate" class="control-label ">Start Date</label>
                                                    <input class="datepickerday flat animation" type="text" asp-for="workHistories[0].StartDate" data-val-required="The StartDate field is required.">
                                                    <span asp-validation-for="workHistories[0].StartDate" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">

                                                <div class="form-group">
                                                    <label asp-for="workHistories[0].EndDate" class="control-label ">End Date</label>
                                                    <input class="datepickerday flat animation" type="text" asp-for="workHistories[0].EndDate" data-val-required="The EndDate field is required.">
                                                    <span asp-validation-for="workHistories[0].EndDate" class="text-danger"></span>
                                                </div>
                                                <div class="form-group-sm" id="untilnow_checkbox">
                                                    <input type="checkbox" asp-for="workHistories[0].UntilNow" class="until" data-val-required="The EndDate field is required.">
                                                    <label class="checkbox" asp-for="workHistories[0].UntilNow">To Date</label>

                                                </div>

                                            </div>

                                        </div>
                                    </td>
                                    <td>  <div class="align-middle"><a id="trash" class=" btn btn-info"><i class="fa fa-trash"></i></a></div></td>
                                </tr>

                            }

                        </tbody>
                        <tfoot class="text-right">
                            <tr>
                                <td>
                                    <button type="button" id="add-workhistory" class="btn btn-main animation"><i class="fa fa-plus"></i> Add Work History</button>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
            <div class="spacer-extra-large"></div>
            <div class="col-lg-7 col-sm-9 col-xs-12  mx-auto ">
                <div class="heading-2">
                    <div class="d-inline-block">
                        <h3>Professional Certifications</h3>
                    </div>
                </div>
                <div class="background marginbottomcontent">
                    <table>

                        <tbody id="bcertificates">

                            @if (Model != null)
                            {
                                @for (int i = 0; i < Model.certificates.Count; i++)
                                {

                                    <tr>
                                        <td>
                                            <div class="row text-left">
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label asp-for="certificates[i].CertificateType" class="control-label ">Certificate Type</label>
                                                        <input class="form-control  flat animation" asp-for="certificates[i].CertificateType" data-val-required="Certificate Type is required" />
                                                        <span asp-validation-for="certificates[i].CertificateType" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label asp-for="certificates[i].CeritifcationImg" class="control-label ">Image (Optional)</label>
                                                        <input class="form-control flat animation" type="file" asp-for="certificates[i].CeritifcationImg" accept=".png, .jpg, .jpeg, .pdf" data-val-required="Certificate Image is required">
                                                        <span asp-validation-for="certificates[i].CeritifcationImg" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label asp-for="certificates[i].StartDate" class="control-label ">Issue Date</label>
                                                        <input class="datepickercert flat animation" type="text" asp-for="certificates[i].StartDate" data-val-required="The Issue Date field is required.">
                                                        <span asp-validation-for="certificates[i].StartDate" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label asp-for="certificates[i].EndDate" class="control-label ">Expiration Date</label>
                                                        <input class="datepickercert flat animation" type="text" asp-for="certificates[i].EndDate" data-val-required="The Expiration Date field is required.">
                                                        <span asp-validation-for="certificates[i].EndDate" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                </div>
</td>
                                        <td>  <div class="align-middle"><a id="trash" class=" btn btn-info"><i class="fa fa-trash"></i></a></div></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>
                                        <div class="row text-left">
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <label asp-for="certificates[0].CertificateType" class="control-label ">Certificate Type</label>
                                                    <input class="form-control flat animation" asp-for="certificates[0].CertificateType" data-val-required="Certificate Type is required" />
                                                    <span asp-validation-for="certificates[0].CertificateType" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="d-flex flex-column">
                                                    <label asp-for="certificates[0].CeritifcationImg" class="control-label ">Image (Optional)</label>
                                                    <div class="form-group-sm">
                                                        <input class="form-control flat animation" type="file" asp-for="certificates[0].CeritifcationImg" accept=".png, .jpg, .jpeg, .pdf" data-val-required="Certificate Image is required">
                                                        <span asp-validation-for="certificates[0].CeritifcationImg" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <label asp-for="certificates[0].StartDate" class="control-label ">Issue Date</label>
                                                    <input class="datepickercert flat animation" type="text" asp-for="certificates[0].StartDate" data-val-required="The Issue Date field is required.">
                                                    <span asp-validation-for="certificates[0].StartDate" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class="form-group">
                                                    <label asp-for="certificates[0].EndDate" class="control-label ">Expiration Date</label>
                                                    <input class="datepickercert flat animation" type="text" asp-for="certificates[0].EndDate" data-val-required="The Expiration Date field is required.">
                                                    <span asp-validation-for="certificates[0].EndDate" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>  <div class="align-middle"><a id="trash" class=" btn btn-info"><i class="fa fa-trash"></i></a></div></td>
                                </tr>

                            }
                        </tbody>
                        <tfoot class="text-right">
                            <tr>
                                <td>
                                    <button type="button" id="add-certificate" class="btn btn-main animation"><i class="fa fa-plus"></i> Add Certificate</button>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
            <div class="paddingbottom">
                <button type="submit" class="btn btn-main animation"> Submit </button>
            </div>

        </div>
    </div>

</form>



