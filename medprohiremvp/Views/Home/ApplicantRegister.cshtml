                    <div class="d-inline-block">

                        <h3>Licensure</h3>

                    </div>
                </div>
                <div class="background marginbottomcontent">

                    <table>
                        <tbody id="bspecalities">

                            @if (Model != null)
                            {
                                @for (int i = 0; i < Model.specialities.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <div class="row text-left">
                                                <div class="col-md-6 col-sm-12">
                                                    <div class=" form-group">
                                                        <label asp-for="specialities[i].Speciality_ID" class="control-label ">License</label>
                                                        <div class=" form-group">
                                                            <select class="form-control selectpicker flat registerselect" title="" asp-items="@ViewBag.Speciality" asp-for="specialities[i].Speciality_ID"></select>
                                                        </div>
                                                        <span asp-validation-for="specialities[i].Speciality_ID" class="text-danger"></span>
                                                    </div>
                                                </div>


                                                <div class="col-md-6 col-sm-12">
                                                    <div class=" form-group">
                                                        <label asp-for="specialities[i].License" class="control-label ">License Number</label>
                                                        <input class="form-control flat animation " type="text" placeholder="License" asp-for="specialities[i].License">
                                                        <span asp-validation-for="specialities[i].License" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <div class=" form-group">
                                                        <label asp-for="specialities[i].LegabilityStates" class="control-label ">Licensure States</label>
                                                        <div class=" form-group">
                                                            <select class="form-control selectpicker flat registerselect" data-size="15" title=" " asp-items="@ViewBag.States" asp-for="specialities[i].LegabilityStates"></select>
                                                        </div>
                                                        <span asp-validation-for="specialities[i].LegabilityStates" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <div class=" form-group">
                                                        <label asp-for="specialities[i].IssueDate" class="control-label "></label>
                                                        <input class="form-control flat animation datepickerday-issue" type="text" asp-for="specialities[i].IssueDate">
                                                        <span asp-validation-for="specialities[i].IssueDate" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>  <div class="align-middle"><a id="trash" class=" btn btn-info"><i class="fa fa-trash"></i></a></div></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>
                                        <div class="row text-left">
                                            <div class="col-md-6 col-sm-12">
                                                <div class=" form-group">
                                                    <label asp-for="specialities[0].Speciality_ID" class="control-label ">License</label>
                                                    <div class=" form-group">
                                                        <select class="form-control selectpicker registerselect flat" title=" " asp-items="@ViewBag.Speciality" asp-for="specialities[0].Speciality_ID"></select>
                                                    </div>
                                                    <span asp-validation-for="specialities[0].Speciality_ID" class="text-danger"></span>
                                                </div>
                                            </div>


                                            <div class="col-md-6 col-sm-12">
                                                <div class=" form-group">
                                                    <label asp-for="specialities[0].License" class="control-label "> License Number</label>
                                                    <input class="form-control flat animation" type="text" asp-for="specialities[0].License">
                                                    <span asp-validation-for="specialities[0].License" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class=" form-group">
                                                    <label asp-for="specialities[0].LegabilityStates" class="control-label ">Licensure States</label>
                                                    <div class=" form-group">
                                                        <select class="form-control selectpicker registerselect flat" data-size="15" title=" " asp-items="@ViewBag.States" asp-for="specialities[0].LegabilityStates"></select>
                                                    </div>
                                                    <span asp-validation-for="specialities[0].LegabilityStates" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <div class=" form-group">
                                                    <label asp-for="specialities[0].IssueDate" class="control-label "></label>
                                                    <input class="form-control flat animation datepickerday-issue" type="text" asp-for="specialities[0].IssueDate">
                                                    <span asp-validation-for="specialities[0].IssueDate" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                  
                                    </td>
                                    <td>  <div class="align-middle"><a id="trash" class=" btn btn-info"><i class="fa fa-trash"></i></a></div></td>
                                </tr>
                            }

                        </tbody>
                        <tfoot class="text-right">
                            <tr>
                                <td>
                                    <button type="button" id="add-speciality" class="btn btn-main "><i class="fa fa-plus"></i> ADD License</button>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
            <div class="spacer-extra-large"></div>
            <div class="col-lg-7 col-sm-9 col-xs-12  mx-auto ">
                <div class="heading-2">
                    <div class="d-inline-block">
                        <h3>Work History</h3>
                    </div>
                </div>
                <div class="background marginbottomcontent">
                    <table>

                        <tbody id="bworkhistory">

                            @if (Model != null)
                            {
                                @for (int i = 0; i < Model.workHistories.Count; i++)
                                {

                                    <tr>
                                        <td>
                                            <div class="row text-left">

                                                <div class="col-md-6 col-sm-12">
                                                    <div class="form-group">
                                                        <label asp-for="workHistories[i].StartDate" class="control-label ">Start Date</label>
                                                        <input class="datepickerday flat animation" type="text" asp-for="workHistories[i].StartDate" data-val-required="The StartDate field is required.">
