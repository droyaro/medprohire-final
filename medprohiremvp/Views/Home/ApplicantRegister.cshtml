                                            </label>
                                        </div>

                                        <div class="col-6 text-left">
                                            <input type="radio" value="false" asp-for="IsEligible" id="no" />
                                            <label for="no" class="radio-inline">
                                                No
                                            </label>
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label asp-for="Availability_ID" class="control-label ">Availability</label>
                                    <div class="form-group-sm">
                                        <select class="form-control selectpicker flat registerselect" title=" " asp-items="@ViewBag.Availability" asp-for="Availability_ID"></select>
                                    </div>
                                    <span asp-validation-for="Availability_ID" class="text-danger"></span>
                                </div>
