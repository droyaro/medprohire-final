@model CMSmedprohiremvp.Models.ClinicalInstitutionViewModel
@if (Model != null)
{
    <div class="mx-auto text-center">
        <div class="heading-2">
            <div class="d-inline-block">

                <h3>Clinical Institution Information</h3>

            </div>
        </div>
        <div class="background ">

            <div class="form-group text-left">
                <input type="hidden" value=@Model.Institution_ID id="client_id" />
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class=" form-group">
                            <strong><label asp-for="InstitutionName" class="control-label ">Institution Name:</label></strong>
                            <label>@Model.InstitutionName</label>
                        </div>
                        <div class="form-group">
                            <label class="control-label "><strong>Contact Person:</strong>@Model.ContactPerson</label>

                        </div>
                        <div class="form-group">
                            <label class="control-label "><strong>Contact Person Phone Number:</strong>@Model.PhoneNumber</label>
                        </div>
                        <div class="form-group">
                            <label class="control-label "><strong>Contact Person Title:</strong>@Model.ContactTitle</label>

                        </div>
                        <div class="form-group">
                            <label class="control-label "><strong>TaxId:</strong>@Model.InstitutionTaxId</label>

                        </div>

                    </div>


                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label class="control-label "><strong>State:</strong>@Model.StateName</label>
                        </div>
                        <div class="form-group">
                            <label class="control-label "><strong>City:</strong>@Model.CityName</label>
                        </div>
                        <div class="form-group">
                            <label class="control-label "><strong>Address:</strong>@Model.Address</label>
                        </div>


                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label "><strong>Specialies:</strong>@Model.PreferredSpecialties</label>
                        </div>
                    </div>
                </div>


            </div>
            <hr />

            @*<button type="submit" id="boardingactivate" class="btn btn-primary">Activate</button>*@
        </div>
    </div>
}