@model List<CMSmedprohiremvp.Models.Applicant.ApplicantAppliedShiftsViewModel>
<div class="mx-auto text-center">
    <div class="heading-2">
        <div class="d-inline-block">

            <h3>Applied Shifts List</h3>

        </div>
    </div>
</div>
<div class="background">
    @if (Model != null)
    {
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="row align-items-center">
                <div class="col-md-9 col-sm-12">
                    <div class="form-group text-left">
                        <div class="form-group-sm">
                            <label for="DateOfShift" class="control-label ">
                                <strong>Insert Date:</strong>
                                @Model[i].DateOfShift.ToString("MMMM dd")
                            </label>

                        </div>
                        <div class="form-group-sm">
                            <label for="ContractorCount" class="control-label ">
                                <strong>Contractor Count:</strong>
                                @Model[i].ContractorCount
                            </label>
                        </div>
                        <div class="form-group-sm">
                            <label class="control-label ">
                                <strong>Shift Dates:</strong>
                                <input type="hidden" class="seeshiftdates"  data-id="@Model[i].AppliedShift_ID" data-shiftdates="@Model[i].ShiftsDates" />
                            </label>
                            <div class="form-group">
                                <div class="d-flex ">
                                    <div class="shiftdatelist_@Model[i].AppliedShift_ID" readonly data-date-multidate="true">
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="form-group-sm">
                            <label for="ShiftLabel_ID" class="control-label ">
                                <strong>Shift Label:</strong>
                                @Model[i].ShiftLabelName
                            </label>
                        </div>
                        <div class="form-group-sm">
                            <label for="ClockInTime" class="control-label ">
                                <strong> Time:</strong>
                                @Model[i].ClockInTime.ToShortTimeString()-@Model[i].ClockOutTime.ToShortTimeString()
                            </label>
                        </div>
                        <div class="form-group-sm">
                            <label for="HourlyRate" class="control-label ">
                                <strong> Hourly Rate:</strong>
                                @Model[i].HourlyRate
                            </label>
                        </div>
                        <div class="form-group-sm">
                            <label for="Occurrences" class="control-label ">
                                <Strong>Occurrences:</Strong>
                                @Model[i].Occurrences
                            </label>
                        </div>

                        <div class="form-group-sm">

                            <label for="ShiftExpirationDate" class="control-label ">
                                <strong>
                                    Shift Expiration Date:
                                </strong>
                                @Model[i].ShiftExpirationDate.ToString("MMMM dd")

                            </label>
                        </div>
                        <div class="form-group-sm">
                            <label for="Specialities" class="control-label ">
                                <strong>Specalities:</strong>
                                @Model[i].SpecialitiesName
                            </label>
                        </div>

                        <div class="form-group-sm">
                            <label for="Branch_ID" class="control-label ">
                                <strong>
                                    Location:
                                </strong>
                                @Model[i].BranchName
                            </label>
                        </div>
                        <div class="form-group-sm">
                            <label for="ShiftDescription" class="control-label">
                                <strong>Description:</strong>
                            </label>
                            <div class="form-group-sm">
                                <label> @Model[i].ShiftDescription</label>
                            </div>
                        </div>

                        <div class="form-group-sm">
                            <label for="Responsibility" class="control-label">
                                <strong>
                                    Responsibility:
                                </strong>
                            </label>
                            <div class="form-group-sm">
                                <label> @Model[i].Responsibility </label>

                            </div>
                        </div>

                        <div class="form-group-sm">


                            <label for="AppliedAllDays" class="checkbox"> <Strong>Applicant Applied to Alldays:</Strong></label>

                            @{
                                if (Model[i].AppliedAllDays)
                                { @Html.Label("Yes")}
                            else
                            { @Html.Label("No")}

                            }
                        </div>
                        <div class="form-group-sm">
                            <label for="AppliedDaysList" class="control-label">
                                <strong>Applied Days:</strong>
                            </label>
                            <input type="hidden" class="applieddays" data-id="@Model[i].AppliedShift_ID" data-applieddates="@Model[i].AppliedDaysList" />
                          
                            <div class="form-group">
                                <div class="d-flex ">
                                    <div class="applieddayslist_@Model[i].AppliedShift_ID" readonly data-date-multidate="true">
                                    </div>

                                </div>
                            </div>




                        </div>

                        <div class="form-group-sm">
                            <label for="Remarks" class="control-label">
                                <strong>Remarks</strong>
                            </label>
                        </div>
                        <div class="form-group-sm">
                            <input class="form-control" asp-for=@Model[i].Remarks  id="Remark_@(Model[i].AppliedShift_ID)"/>
                        </div>
                    </div>
                 
                </div>
                    <div class="col-md-3 col-sm-12">
                        <div class="form-group">
                            <a id="acceptedShifts" data-id="@Model[i].AppliedShift_ID" class="btn btn-primary">Accept</a>
                        </div>
                        <div class="form-group">
                            <a id="dismissedShifts" data-id="@Model[i].AppliedShift_ID"  class="btn btn-primary">Dismiss</a>
                        </div>
                    </div>
                </div>

            if (i < Model.Count - 1)
            {
                <hr />
            }
        }
    }
</div>
