@model List<CMSmedprohiremvp.Models.Clinical.ClientShiftViewModel>
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <h2>Shifts</h2>

                <div class="ibox-content">
                    <div class="d-flex flex-column flex-md-row flex-fill justify-content-between">
                        <div class="p-2 m-b-xs my-auto">

                        </div>
                        <div class="p-2 m-b-xs">
                            <div class="row">
                                <div class="col m-b-xs">
                                    <input class="form-control flat animation datepicker" id="insertdate" type="text" placeholder="Modify Date" />
                                </div>
                                <div class="input-group-append mx-auto"><span class="input-group-text m-b-xs">to</span></div>
                                <div class="col m-b-xs">
                                    <input class="form-control flat animation datepicker" placeholder="EndDate" id="enddate" type="text" />
                                </div>
                            </div>
                        </div>
                        <div class="p-2">
                            <div class="input-group">
                                <input placeholder="Search" type="text" class="form-control form-control-sm" id="searchtext"> <span class="input-group-append">
                                    <button type="button" class="btn btn-sm btn-primary">
                                        Go!
                                    </button>
                                </span>
                            </div>

                        </div>
                    </div>
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane active">
                            <div class="full-height-scroll">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover dataTable">
                                        <thead>
                                            <tr>
                                                <th>Insert Date</th>
                                                <th>Location</th>
                                                <th>Specialities</th>
                                                <th>Label</th>
                                                <th>Category</th>
                                                
                                                <th>HourlyRate</th>
                                                <th> View Shift</th>
                                                <th>Invite</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                if (Model != null)
                                                {

                                                    for (int i = 0; i < Model.Count; i++)
                                                    {
                                            <tr>
                                                <td>
                                                    @Model[i].DateOfShift.ToString("MMM dd yyyy")
                                                </td>
                                                <td>
                                                    @Model[i].BranchName
                                                </td>
                                                <td>
                                                    @Model[i].SpecialitiesName
                                                </td>
                                                <td>
                                                    @Model[i].ShiftLabelName
                                                </td>
                                                <td>@Model[i].Category</td>


                                                <td>@Model[i].HourlyRate</td>

                                                <td>
                                                    <a href="@Url.Action("ShiftView","Clinical", new { Clientshift_ID=Model[i].ClientShift_ID})">View Shift</a>
                                                </td>
                                                <td>
                                                    @if(Model[i].ShiftExpirationDate >=DateTime.Now)
                                                    { 
                                                    <a href="@Url.Action("InviteShift","Clinical", new { Clientshift_ID=Model[i].ClientShift_ID})">Invite Applicant</a>
                                                    }
                                                </td>
                                            </tr>

                                                    }
                                                }
                                            }


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>

    </div>
</div>
@section scripts{

    <script src="~/js/Datatable.js"></script>

}