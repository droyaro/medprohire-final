@model EmailSendModel

<div class="wrapper wrapper-content">
    <div class="row">
        <h2>
            Compose mail
        </h2>

        <div class="mail-box">
            <form class="form-horizontal" id="sendmailform">

                <div class="mail-body">

                    <div class="answer"></div>
                    <div class="form-group">

                        <label class="col-sm-2 control-label">To:</label>

                        <div class="col-sm-10"><input type="text" class="form-control" asp-for="@Model.To"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Subject:</label>

                        <div class="col-sm-10"><input type="text" class="form-control" asp-for="@Model.Subject"></div>
                    </div>


                </div>

                <div class="mail-text h-300">

                    <div class="summernote" id="Body">
                        @Model.Body
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="mail-body text-right tooltip-demo">
                    <a class="btn  btn-primary" id="sendemail">Send</a>

                </div>
            </form>
            
        </div>
    </div>
</div>
