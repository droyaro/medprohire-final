@model List<CMSmedprohiremvp.Models.Ticket.TicketViewModel>
@{
    if (Model != null)
    {
        <div class="wrapper wrapper-content  animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox">
                        <h2>Applicants</h2>
                        <div class="ibox-content">
                            <div class="row">

                                <div class="col-sm-6 m-b-xs">
                                    <div class="row">
                                        <div class="col-sm-5 m-b-xs">
                                            <input class="form-control flat animation datepicker" id="insertdate" type="text" placeholder="Insert Date" />
                                        </div>
                                        <div class="input-group-append"><span class="input-group-text">to</span></div>
                                        <div class="col-sm-5 m-b-xs">
                                            <input class="form-control flat animation datepicker" placeholder="EndDate" id="enddate" type="text" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="input-group">
                                        <input placeholder="Search" type="text" class="form-control form-control-sm" id="searchtext"> <span class="input-group-append">
                                            <button type="button" class="btn btn-sm btn-primary">
                                                Go!
                                            </button>
                                        </span>
                                    </div>

                                </div>
                            </div>
                            <div class="tab-content">
                                <div id="tab-1" class="tab-pane active">
                                    <div class="full-height-scroll">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover dataTable" style="width:100%">


                                                <thead>
                                                    <tr>
                                                        <th>
                                                            Ticket Category
                                                        </th>
                                                        <th>
                                                            Ticket Subject
                                                        </th>
                                                        <th>
                                                            Ticket Status
                                                        </th>
                                                        <th>
                                                            Last Modified
                                                        </th>
                                                        <th>
                                                            View
                                                        </th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @for (int i = 0; i < Model.Count; i++)
                                                    {
                                                        <tr>
                                                            <td>@Model[i].TicketCategoryName</td>
                                                            <td><a href="@Url.Action("TicketContent","Ticket", new { Ticket_ID=Model[i].Ticket_ID})" class="btn btn-link">@Model[i].Subject</a> </td>
                                                            @{
                                                                string ticketypestring = "";
                                                                switch (Model[i].TicketType)
                                                                {
                                                                    case 0:
                                                                        ticketypestring = "Created by User";
                                                                        break;
                                                                    case 1:
                                                                        ticketypestring = "Answered";
                                                                        break;
                                                                    case 2:
                                                                        ticketypestring = "Changed by user";
                                                                        break;
                                                                    default:
                                                                        ticketypestring = "Complete";
                                                                        break;
                                                                }
                                                            }
                                                            <td>@ticketypestring</td>
                                                            <td>
                                                                @Model[i].DateModified.ToString("MMMM dd yyyy")
                                                            </td>
                                                            <td>
                                                                <a href="@Url.Action("TicketContent","Ticket", new { Ticket_ID=Model[i].Ticket_ID})" class="btn  btn-sm"> View</a>
                                                            </td>

                                                        </tr>
                                                    }
                                                </tbody>

                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>
    }
}
@section scripts{

    <script src="~/js/Datatable.js"></script>

}
